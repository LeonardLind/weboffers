{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true, // Allows JavaScript files to be compiled
    "checkJs": false, // Disables type checking for JavaScript files
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true // Optional: Skip type checking of declaration files
  },
  "include": ["src"], // Include your source files
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"] // Exclude test files and node_modules
}
